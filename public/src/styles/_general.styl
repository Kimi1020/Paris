html
body
  height 100vh
  margin 0
  padding 0
  font-family 'microsoft yahei',sans-serif
  background #111
  color #f0f0f0

button
input
textarea
  font-family 'microsoft yahei',sans-serif

a
  color #39f
  text-decoration none

  &:hover
    text-decoration underline

input
  height 44px
  width 18rem
  border 3px solid gray
  border-radius 7px
  outline 0 none
  padding-left .7rem
  padding-right .7rem
  margin-left .25rem
  margin-right .25rem
  vertical-align middle
  font-size 1.25rem
  background lightgray

button
  height 52px
  padding-left 1.1rem
  padding-right 1.1rem
  border 3px solid gray
  border-radius 7px
  outline 0 none
  margin-left .25rem
  margin-right .25rem
  vertical-align middle
  cursor pointer
  font-size 1.3rem
  font-weight bold
  background rgb(0, 46, 89)
  color rgb(122, 208, 245)

  &:hover
    background lighten(rgb(0, 46, 89), 5%)

  &:active
    background lighten(rgb(0, 46, 89), 10%)
    box-shadow inset 0 3px 5px rgba(0, 0, 0, .3)

  &:disabled
    background #a0a0a0
    color #7e7e7e

body
  background url(../images/texas.jpg)
  background-size cover
  overflow hidden

section
  height 100vh
  width 100vw
  background rgba(0, 0, 0, .75)
  display flex
  flex-direction column
  justify-content center
  align-items center
  position absolute
  transform translateY(-100vh)
  transition transform 400ms ease-in-out
  transition-delay 0s

body.home section#home
body.room section#room
body.game section#game
  transform translateY(0)
  transition-delay 450ms
