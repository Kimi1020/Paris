doctype html
html
  head
    meta(charset='utf-8')
    title #{title}
    link(rel='stylesheet' href='/dist/css/styles.css')

  body
    section(id='#{page}')
      div
        h1 #{nametip} #{player.name}
        h1 #{cashtip} #{player.cash}

      form(method='post' action='/game')
        p
          input(type='hidden' name='name' value='#{player.name}')
          input(type='hidden' name='cash' value='#{player.cash}')
          button #{join}

    script(src='/dist/js/room.js')